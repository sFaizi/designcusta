extends baseEmail
block content
  table.bdgtHeader(role='presentation', border='0', cellpadding='0', cellspacing='0')
    thead 
      tr.bdgtHeaderCells 
        td= `${subject ? subject : 'Incoming mail designcusta'}`
        td
          img.mailLogo(src="cid:uniq-dc_logo.png" width="150px")
  table.bdgtBody(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td= `Email from ${name ? name : 'customer'},`
      tr
        td 
          pre= `${message ? message : 'Message....'}`
